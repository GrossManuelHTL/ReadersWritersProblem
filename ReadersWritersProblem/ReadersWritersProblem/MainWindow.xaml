<Window x:Class="ReadersWritersProblem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReadersWritersProblem"
        mc:Ignorable="d"
        Title="Art Collaboration" Height="450" Width="800">
    <Grid>

        <Canvas Name="canvas" Background="White">
            <Image Source="images/leinwand.jpg" Width="100" Height="100" Canvas.Left="340" Canvas.Top="250"/>
            <Image x:Name = "imageLeft" Source="images/kuenstler.jpg" Width="150" Height="150" Canvas.Left="25" Canvas.Top="250"/>
            <Image x:Name = "imageRight1" Source="images/betrachter.png" Width="100" Height="100" Canvas.Right="75" Canvas.Top="330"/>
            <Image x:Name = "imageRight2" Source="images/betrachter.png" Width="100" Height="100" Canvas.Right="75" Canvas.Top="225"/>
        </Canvas>

        <StackPanel>
            <Button Content="Start Simulation" Click="StartSimulationButton_Click"/>
            <TextBox x:Name="logTextBox" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
